#!/bin/sh /etc/rc.common

# Copyright (C) wynter

START=99
STOP=85

USE_PROCD=1
PROG=/bin/gaethmon

start_service()
{
	echo "start gaethmon"
	procd_open_instance
	procd_set_param command $PROG
	procd_set_param respawn
	procd_close_instance
}

service_triggers()
{
	procd_add_reload_trigger "iwmoncfg"
}

reload_service()
{
	stop
	start
}
